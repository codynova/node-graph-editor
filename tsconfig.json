{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": [ "dom", "esnext" ],
		"baseUrl": "./src",
		"outDir": "./dist",
		"declaration": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"removeComments": true,
		"sourceMap": true,
		"skipLibCheck": true,
	},
	"include": [
		"./src/**/*.ts"
	]
}
